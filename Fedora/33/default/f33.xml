<background>
  <starttime>
    <year>2020</year>
    <month>10</month>
    <day>20</day>
    <hour>07</hour>
    <minute>00</minute>
    <second>00</second>
  </starttime>
<!-- This animation will start at 7 AM. -->

<!-- We start with dawn at 7 AM. It will remain up for 2 hours. -->
<static>
<duration>7200.0</duration>
<file>/usr/share/backgrounds/f33/default/f33-01-dawn.png</file>
</static>

<!-- Dawn ended and starts to transition to day at 9 AM. The transition lasts for 2 hours, ending at 11 AM. -->
<transition type="overlay">
<duration>7200.0</duration>
<from>/usr/share/backgrounds/f33/default/f33-01-dawn.png</from>
<to>/usr/share/backgrounds/f33/default/f33-02-day.png</to>
</transition>

<!-- It's 11 AM, we're showing the day image in full force now, for 4 hours ending at 3 PM. -->
<static>
<duration>14400.0</duration>
<file>/usr/share/backgrounds/f33/default/f33-02-day.png</file>
</static>

<!-- It's 3 PM, and we're starting to transition to dusk. Transition completes at 7 PM. -->
<transition type="overlay">
<duration>14400.0</duration>
<from>/usr/share/backgrounds/f33/default/f33-02-day.png</from>
<to>/usr/share/backgrounds/f33/default/f33-03-dusk.png</to>
</transition>

<!-- It's 7 PM, we're showing the dusk for 2 hours ending at 9 PM. -->
<static>
<duration>7200.0</duration>
<file>/usr/share/backgrounds/f33/default/f33-03-dusk.png</file>
</static>

<!-- It's 9 PM, and we're starting to transition to night. Transition completes at 11 PM. -->
<transition type="overlay">
<duration>7200.0</duration>
<from>/usr/share/backgrounds/f33/default/f33-03-dusk.png</from>
<to>/usr/share/backgrounds/f33/default/f33-04-night.png</to>
</transition>

<!-- It's 11 PM, we're showing the night till 5 AM. -->
<static>
<duration>21600.0</duration>
<file>/usr/share/backgrounds/f33/default/f33-04-night.png</file>
</static>

<!-- It's 5 AM, and we're starting to transition to dawn. Transition completes at 7 AM. -->
<transition type="overlay">
<duration>7200.0</duration>
<from>/usr/share/backgrounds/f33/default/f33-04-night.png</from>
<to>/usr/share/backgrounds/f33/default/f33-01-dawn.png</to>
</transition>

</background>
